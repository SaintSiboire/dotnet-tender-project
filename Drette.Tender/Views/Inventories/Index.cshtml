@model Drette.Tender.ViewModels.InventoriesIndexViewModel
@using Drette.Tender.Shared.Models

@{
    ViewBag.Title = "Inventaires";
}
@Html.Partial("_Message")

<div class="stats">
    <div class="stats-left">
        <h2 class="stats-header h3">Nombre de produits en inventaire</h2>
        <span class="stats-number">@Model.TotalInventories</span> produits
    </div>
    <div class="stats-right">
        <h2 class="stats-header h3">Valeur totale</h2>
        <span class="stats-number">@Model.TotalValue.ToString("n2")</span> $
    </div>
</div>

<div class="pad-top">
    <h2>@ViewBag.Title</h2>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Compté</th>
            <th>Suivi</th>
            <th>En inventaire</th>
            <th>Min</th>
            <th>Max</th>
            <th>Coût total</th>
            <th>Coût unitaire</th>
            <th>Type d'unité</th>
            <th>Qté./unité</th>
            <th>Emplacement</th>


            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inventory in Model.Inventories)
        {
            <tr>
                <td>@inventory.Id</td>
                <td>@inventory.Counted</td>
                <td>@inventory.Followed</td>
                <td>@inventory.UnitQty</td>
                <td>@inventory.UnitMinQty</td>
                <td>@inventory.UnitMaxQty</td>
                <td>@inventory.TotalCost</td>
                <td>@inventory.AverageCost</td>
                <td>@inventory.Unit.Name</td>
                <td>@inventory.Unit.Quantity</td>
                <td>@inventory.Location</td>


                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Detail", new { id = inventory.Id })" class="btn btn-primary btn-xs margin-right">
                            <span class="glyphicon glyphicon-info-sign"></span><span class="hidden-xs"> Detail</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
