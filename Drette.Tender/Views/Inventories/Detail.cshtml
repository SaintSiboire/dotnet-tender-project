@model Drette.Tender.ViewModels.InventoriesBaseViewModel
@using Drette.Tender.Shared.Models
@{
    /**/

    ViewBag.Title = "Détail de l'inventaire";
}
@Html.Partial("_Message")
<h2 class="pad-top">Détail de l'inventaire</h2>

<div class="row">
    <div class="col-md-6">

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.Id)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.Id
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.Counted)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.Counted
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.Followed)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.Followed
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.TotalCost)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.TotalCost
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.AverageCost)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.AverageCost
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.UnitQty)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.UnitQty
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.Label("Quantité par unité")
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.Unit.Quantity
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.UnitMaxQty)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.UnitMaxQty
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.UnitMinQty)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.UnitMinQty
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.OrderMinQty)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.OrderMinQty
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.Location)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.Location
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.LocationPrecision)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.LocationPrecision
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.Inventory.UserId)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.Inventory.UserId
            </div>
        </div>


    </div>

    <div class="col-md-6">
        <div>
            @Html.LabelFor(m => m.Inventory.Notes)
        </div>
        <div>
            @(!string.IsNullOrWhiteSpace(Model.Inventory.Notes) ? Model.Inventory.Notes : "N/A")
        </div>
    </div>

</div>


<div class="pad-top">

    <a href="@Url.Action("Edit", new { id = Model.Inventory.Id })" class="btn btn-info btn-sm margin-right">
        <span class="glyphicon glyphicon-edit"></span> Modifier
    </a>



    <a href="@Url.Action("Index")" class="btn btn-warning btn-sm">
        <span class="glyphicon glyphicon-step-backward"></span> Retour
    </a>

</div>
