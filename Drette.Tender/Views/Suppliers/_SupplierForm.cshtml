@model Drette.Tender.ViewModels.SuppliersBaseViewModel


<div class="row">

    <div class="col-md-6">

        <h3>Détails du fournisseur</h3>

        <div class="form-group">
            @Html.LabelFor(m => m.Supplier.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Supplier.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Supplier.WebSite, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Supplier.WebSite, new { @class = "form-control" })
        </div>

        <div class="hidden">
            @Html.LabelFor(m => m.Supplier.Id, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Supplier.Id, new { @class = "form-control" })
        </div>


    </div>

</div>