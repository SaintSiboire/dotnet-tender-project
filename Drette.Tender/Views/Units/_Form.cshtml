@model Drette.Tender.ViewModels.UnitsBaseViewModel

<div class="row">

    <div class="col-md-6">

        <h3>Détails du produit</h3>

        <div class="form-group">
            @Html.LabelFor(m => m.Unit.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Unit.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Unit.Quantity, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Unit.Quantity, new { @class = "form-control" })
        </div>

        <div class="hidden">
            @Html.LabelFor(m => m.Unit.Id, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Unit.Id, new { @class = "form-control" })
        </div>


    </div>

</div>
